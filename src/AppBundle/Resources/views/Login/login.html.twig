{% extends "BinaryTradeBundle:Layout:application.html.twig" %}

{% block title "Login" %}

{% block content %}
    {% if errors != null %}
    <div>
        {{ errors.message ?? "" }}
    </div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="form form-compact">
        <div class="form-group">
            <label>{% trans %}Username{% endtrans %}:</label>
            <input type="text" name="_username" id="username" />
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input type="password" name="_password" id="password" />
        </div>
        <div class="form-group content-center">
            <input type="submit" />
        </div>
    </form>
{% endblock %}
