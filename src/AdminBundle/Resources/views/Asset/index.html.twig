{% extends "@Admin/base.html.twig" %}

{% block title "Assets" %}

{% block body %}
    <table class="table card">
        <thead>
        <tr>
            <th width="100">Pid</th>
            <th>Название</th>
            <th width="150">Тип</th>
            <th width="275" class="pull-right contains-button"><a href="{{ url('assets.create') }}" class="button button-small">cоздать</a></th>
        </tr>
        </thead>
        <tbody>
        {% for asset in assets %}
        <tr>
            <td>{{ asset.pid }}</td>
            <td>{{ asset.name }}</td>
            <td>{{ asset.type }}</td>
            <td class="pull-right links-list">
                <a href="{{ url('assets.delete', { id: asset.id }) }}">удалить</a>
                <a href="{{ url('assets.edit', { id: asset.id }) }}">редактировать</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include '@Admin/pagination/pagination.html.twig' with { pagination: assets, path: 'assets.index.page' } only %}

{% endblock %}
