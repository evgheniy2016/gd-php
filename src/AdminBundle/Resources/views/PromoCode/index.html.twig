{% extends "@Admin/base.html.twig" %}

{% block title "Promocodes" %}

{% block body %}

    <table class="table card">
        <thead>
        <tr>
            <th width="75">id</th>
            <th width="250">Промокод</th>
            <th>Администратор</th>
            <th width="175">Пользователей</th>
            <th class="pull-right contains-button" width="100"><a href="{{ path('promo_code.create') }}" class="button button-small">создать</a></th>
        </tr>
        </thead>
        <tbody>
        {% for promocode in promocodes %}
        <tr>
            <td>{{ promocode.id }}</td>
            <td>{{ promocode.code }}</td>
            <td><a href="{{ path('administrators.edit', { id: promocode.author.id }) }}">{{ promocode.author.username }}</a></td>
            <td>{{ promocode.users.count }}</td>
            <td class="pull-right links-list">
                <a href="{{ path('promo_code.delete', { id: promocode.id }) }}">удалить</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include '@Admin/pagination/pagination.html.twig' with { pagination: promocodes, path: 'promo_code.index.page' } only %}

{% endblock %}
