{% extends '@Admin/User/show.html.twig' %}

{% block title user.username ~ " balance" %}

{% block show_user_content %}
    <h3 class="offset-left offset-bottom">Balance: {{ user.balance }}$</h3>

    <table class="table">
        <thead>
        <tr>
            <th width="175">type</th>
            <th>amount</th>
        </tr>
        </thead>
        <tbody>
        {% for balance_history in history %}
        <tr>
            <td>{{ balance_history.type }}</td>
            <td><span class="balance-history-type"><span class="type-{{ balance_history.type }}">{{ balance_history.amount }}</span>&nbsp;{{ currency }}</span></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include '@Admin/pagination/pagination.html.twig' with {pagination: history, path: 'users.show.balance.page', params: { id: user.id } } only %}
{% endblock %}