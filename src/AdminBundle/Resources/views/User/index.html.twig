{% extends "@Admin/base.html.twig" %}

{% block title "Users" %}

{% block body %}

    <table class="table card">
        <thead>
        <tr>
            <th width="75">id</th>
            <th width="300">username</th>
            <th>promocode</th>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <th class="pull-right contains-button">
                <a href="{{ path('users.create') }}" class="button button-small">create</a>
            </th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td><a href="{{ path('users.edit', { id: user.id }) }}">{{ user.username }}</a></td>
            <td {% if is_granted('ROLE_SUPER_ADMIN') %} colspan="2" {% endif %}>{{ user.promocode }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include '@Admin/pagination/pagination.html.twig' with { pagination: users, path: 'users.index.page' } only %}

{% endblock %}
